@{
    Layout = "~/UI/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="card login-logout-tab">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item">
                        <a class="nav-link" href='/Account/Manage/Index'>User Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href='/Account/Manage/ChangePassword'>Change Password</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Account/Manage/Email">Change Email</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Account/Manage/ExternalLogins">External Logins</a>
                    </li>
                </ul>
            </div>
            <div class="card-content">
                <div class="col-md-12">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @RenderSection("Scripts", required: false)
    <script>
        $(function () {
            var current = location.pathname;
            $('.nav-tabs li a').each(function () {
                var $this = $(this);
                if (current.indexOf($this.attr('href')) !== -1) {
                    $this.addClass('active');
                }
            })
        })
  </script>
}
