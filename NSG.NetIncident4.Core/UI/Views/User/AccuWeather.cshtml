@using System.ServiceModel.Syndication
@using NSG.NetIncident4.Core.UI.ViewModels
@model List<Forecast>
@{
    // ===========================================================================
    ViewData["Title"] = "Weather Forecast";
}
<div class="col-md-6">
    <form method='post' class='form-group'>
        <button type='submit' class='btn btn-primary'>Refresh</button>
    </form>
    @if (Model.Count > 0)
    {
        @foreach (Forecast post in Model)
        {
        <div class="card border-primary mb-3" style="width: 100%;">
            <div class="card-header"><strong>@post.Header</strong></div>
            <div class="card-body">
                <p>@post.Description</p>
            </div>
        </div>
        }
    }
</div>