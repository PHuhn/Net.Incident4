@model NSG.NetIncident4.Core.Application.Commands.ApplicationUsers.ApplicationUserUpdateQuery
@{
    ViewBag.Title = "Edit";
}
<h2>User (Edit)</h2>
<div class="container">
    <form asp-controller="UsersAdmin" asp-action="Edit" asp-route-model="@Model">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-actions no-color">
            <div class="nsg-float-left text-left">
                <span>
                    <a asp-action="Index">Back to List</a>
                </span>
            </div>
            <div class="nsg-float-right text-right">
                <span>
                    <input type="submit" value="Save" class="btn btn-primary" />
                </span>
            </div>
            <div style="clear: both;"></div>
        </div>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input id="Id" name="Id" type="hidden" value="@(Model.Id)" />
        <input type="hidden" asp-for="UserName" />
        <div class="row">
            <div class="col-lg-6">
                <div class="row">
                    <label class="col-md-3 nsg-label" for="UserName">
                        User Name:
                    </label>
                    <div class="col-md-8">
                        @Html.DisplayFor(model => model.UserName)
                    </div>
                </div>
                <div class="row">
                    <label class="col-md-3 nsg-label" for="Email">
                        Email:
                    </label>
                    <div class="col-md-8">
                        <input asp-for="Email" class="form-control" maxlength="256" style="width: 100%;" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <label class="col-md-3 nsg-label" for="PhoneNumber">
                        Phone #:
                    </label>
                    <div class="col-md-8">
                        <input asp-for="PhoneNumber" class="form-control" maxlength="256" style="width: 100%;" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <label class="col-md-3 nsg-label" for="CompanyId">Company:</label>
                    <div class="col-md-8">
                        <select asp-for="CompanyId" asp-items="Model.CompaniesList" style="height: 35px; width: 250px;"></select>
                        <span asp-validation-for="CompanyId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="row">
                    <label class="col-md-3 nsg-label" for="FirstName">
                        First Name:
                    </label>
                    <div class="col-md-8">
                        <input asp-for="FirstName" class="form-control" maxlength="100" style="width: 100%;" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <label class="col-md-3 nsg-label" for="LastName">
                        Last Name:
                    </label>
                    <div class="col-md-8">
                        <input asp-for="LastName" class="form-control" maxlength="100" style="width: 100%;" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <label class="col-md-3 nsg-label" for="FullName">
                        Full Name:
                    </label>
                    <div class="col-md-8">
                        <input asp-for="FullName" class="form-control" maxlength="100" style="width: 100%;" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <label class="col-md-3 nsg-label" for="UserNicName">
                        Nic Name:
                    </label>
                    <div class="col-md-8">
                        <input asp-for="UserNicName" class="form-control" maxlength="16" style="width: 200px;" />
                        <span asp-validation-for="UserNicName" class="text-danger"></span>
                    </div>
                </div>

            </div>
            <hr />

            <div class="col-md-12">
                <div class="form-group row">
                    <label class="col-md-2 nsg-label" for="SelectedRoles">Roles:</label>
                    <div class="col-md-10">
                        @foreach (var item in Model.RolesList)
                        {
                            <div style="padding:0 15px 0 0; float: left;">
                                @Html.HiddenFor(m => item.Value)
                                <input type="checkbox" name="SelectedRoles" value="@item.Value" checked="@item.Selected" class="checkbox-inline" />
                                <label class="nsg-label" for="@item.Value">@(item.Text)</label>
                            </div>
                        }
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-2 nsg-label" for="SelectedServers">Servers:</label>
                    <div class="col-md-10">
                        @foreach (var item in Model.ServersList)
                        {
                            <div style="padding:0 15px 0 0; float: left;">
                                @Html.HiddenFor(m => item.Value)
                                <input type="checkbox" name="SelectedServers" value="@item.Value" checked="@item.Selected" class="checkbox-inline" />
                                <label class="nsg-label" for="@item.Value">@(item.Text)</label>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
