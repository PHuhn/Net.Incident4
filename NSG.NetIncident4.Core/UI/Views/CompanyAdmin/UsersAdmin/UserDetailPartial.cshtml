@model NSG.NetIncident4.Core.Application.Commands.ApplicationUsers.ApplicationUserDetailQuery
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <label class="col-md-5 nsg-label" for="UserName">
                    User Name:
                </label>
                <div class="col-md-7">
                    @Html.DisplayFor(model => model.UserName)
                </div>
            </div>
            <div class="row">
                <label class="col-md-5 nsg-label" for="Email">
                    Email:
                </label>
                <div class="col-md-7">
                    @Html.DisplayFor(model => model.Email)
                </div>
            </div>

            <div class="row">
                <label class="col-md-5 nsg-label" for="EmailConfirmed">
                    Email Confirmed:
                </label>
                <div class="col-md-7">
                    @Html.DisplayFor(model => model.EmailConfirmed)
                </div>
            </div>

            <div class="row">
                <label class="col-md-5 nsg-label" for="PhoneNumber">
                    Phone #:
                </label>
                <div class="col-md-7">
                    @Html.DisplayFor(model => model.PhoneNumber)
                </div>
            </div>

            <div class="row">
                <label class="col-md-5 nsg-label" for="PhoneNumberConfirmed">
                    Phone # Confirmed:
                </label>
                <div class="col-md-7">
                    @Html.DisplayFor(model => model.PhoneNumberConfirmed)
                </div>
            </div>

            <div class="row">
                <label class="col-md-5 nsg-label" for="CompanyName">
                    Company:
                </label>
                <div class="col-md-7">
                    @(ViewHelpers.DescIdShortDesc(Model.CompanyName, Model.CompanyId, Model.CompanyShortName))
                </div>
            </div>

        </div>

        <div class="col-md-6">

            <div class="row">
                <label class="col-md-5 nsg-label" for="FirstName">
                    First Name:
                </label>
                <div class="col-md-7">
                    @Html.DisplayFor(model => model.FirstName)
                </div>
            </div>

            <div class="row">
                <label class="col-md-5 nsg-label" for="LastName">
                    Last Name:
                </label>
                <div class="col-md-7">
                    @Html.DisplayFor(model => model.LastName)
                </div>
            </div>

            <div class="row">
                <label class="col-md-5 nsg-label" for="FullName">
                    Full Name:
                </label>
                <div class="col-md-7">
                    @Html.DisplayFor(model => model.FullName)
                </div>
            </div>

            <div class="row">
                <label class="col-md-5 nsg-label" for="UserNicName">
                    Nic Name:
                </label>
                <div class="col-md-7">
                    @Html.DisplayFor(model => model.UserNicName)
                </div>
            </div>

            <div class="row">
                <label class="col-md-5 nsg-label" for="CreateDate">
                    Created:
                </label>
                <div class="col-md-7">
                    @Html.DisplayFor(model => model.CreateDate)
                </div>
            </div>

        </div>
    </div>
    <div class="col-md-12">
        <hr />
        @if (Model.RoleList.Count == 0)
        {
            <div class="row nsg-bold">No roles found for this user.</div>
        }
        else
        {
            <div class="row nsg-bold">
                Roles
            </div>
            <div class="row">
                @foreach (var item in Model.RoleList)
                {
                    <div style="padding:0 18px 8px 0; float: left;">
                        @item
                    </div>
                }
            </div>
        }
        <div style="clear: left;"></div>
        @if (Model.ServerList.Count == 0)
        {
            <div class="row nsg-bold">No servers found for this user.</div>
        }
        else
        {
            <div class="row nsg-bold">
                Servers
            </div>
            <div class="row">
                @foreach (var item in Model.ServerList)
                {
                    <div style="padding:0 18px 8px 0; float: left;">
                        @item.ServerShortName (@item.CompanyShortName)
                    </div>
                }
            </div>

        }
        <div class="nsg-clear-left"></div>
    </div>
</div>
