@model NSG.NetIncident4.Core.Application.Commands.CompanyEmailTemplates.CompanyEmailTemplateDetailQuery
@{
    ViewBag.Title = "Delete";
}
<h2>Company E-Mail Template (Delete)</h2>
<div class="container">
    <form asp-controller="CompanyEmailTemplates" asp-action="Delete" asp-route-companyId="@Model.CompanyId" asp-route-incidentTypeId="@Model.IncidentTypeId" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <div class="nsg-float-left text-left">
                <span>
                    <a asp-action="Index" asp-route-companyId="@Model.CompanyId">Back to List</a>
                </span>
            </div>
            <div class="nsg-float-right text-right">
                <span>
                    <strong>Are you sure you want to delete this?</strong>
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </span>
            </div>
            <div class="nsg-clear-both"></div>
        </div>
    </form>

    @await Html.PartialAsync("CompanyEmailTemplateDetailsPartial", @Model)

</div>
