@model IEnumerable<NSG.NetIncident4.Core.Application.Commands.NICs.NICListQuery>
@{
    ViewData["Title"] = "Index";
}
<h2>NICs (Index)</h2>
<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row nsg-hd-row">
    <div class="col-md-2"></div>
    <div class="col-md-2">
        NIC Id
    </div>
    <div class="col-md-7">
        Description
    </div>
    <div class="col-md-1"></div>
</div>
@foreach (var item in Model)
{
    <div class="row nsg-row">
        <div class="col-md-2">
            <a asp-action="Details" asp-route-id="@item.NIC_Id">Details</a> |
            <a asp-action="Edit" asp-route-id="@item.NIC_Id">Edit</a>
        </div>
        <div class="col-md-2">
            @Html.DisplayFor(modelItem => item.NIC_Id)
        </div>
        <div class="col-md-7">
            @Html.DisplayFor(modelItem => item.NICDescription)
        </div>
        <div class="col-md-1">
            <a asp-action="Delete" asp-route-id="@item.NIC_Id" class="nsg-text-danger">Delete</a>
        </div>
    </div>
}
