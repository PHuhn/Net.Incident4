@model IEnumerable<NSG.NetIncident4.Core.Application.Commands.IncidentTypes.IncidentTypeListQuery>
@{
    ViewData["Title"] = "Index";
}
<h2>Incident Type/E-Mail Templete</h2>
<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row nsg-hd-row">
    <div class="col-md-2"></div>
    <div class="col-md-1 nsg-hd-col">
        Short Desc
    </div>
    <div class="col-md-3 nsg-hd-col">
        Type Desc
    </div>
    <div class="col-md-1 nsg-hd-col">
        Use Server Values
    </div>
    <div class="col-md-4 nsg-hd-col">
        Subject Line
    </div>
    <div class="col-md-1"></div>
</div>
@foreach (var item in Model)
{
    <div class="row nsg-row">
        <div class="col-md-2">
            <a asp-action="Details" asp-route-id="@item.IncidentTypeId">Details</a> |
            <a asp-action="Edit" asp-route-id="@item.IncidentTypeId">Edit</a>
        </div>
        <div class="col-md-1">
            @Html.DisplayFor(modelItem => item.IncidentTypeShortDesc)
        </div>
        <div class="col-md-3">
            @Html.DisplayFor(modelItem => item.IncidentTypeDesc)
        </div>
        <div class="col-md-1">
            @Html.DisplayFor(modelItem => item.IncidentTypeFromServer)
        </div>
        <div class="col-md-4">
            @Html.DisplayFor(modelItem => item.IncidentTypeSubjectLine)
        </div>
        <div class="col-md-1">
            <a asp-action="Delete" asp-route-id="@item.IncidentTypeId" class="nsg-text-danger">Delete</a>
        </div>
    </div>
}
